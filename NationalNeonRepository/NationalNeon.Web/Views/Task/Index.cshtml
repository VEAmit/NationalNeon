                    <div class="modal-body" id="divAddPopup">
                        <!-- Modal content-->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="tasksList">
    </div>
    <!-- NEW WIDGET START -->
    <!-- WIDGET END -->
