@model IList<NationalNeon.Domain.Department.DepartmentModel>

<style>
    #tt {
        color:red;
    }
</style>

<table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
    <thead>
        <tr>
            <th>Name</th>
            <th> Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td >
                   
                    @*<a asp-area="" asp-controller="Department" asp-action="Detail">@item.departmentname</a>*@
                   @Html.ActionLink(@item.departmentname, "Detail", "Department",new { @Id=item.departmentId })
                </td>
                <td>@item.description</td>
            </tr>
        }
    </tbody>


</table>
